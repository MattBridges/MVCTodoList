@model IEnumerable<MVCTodoList.Models.ToDoItem>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Completed Items</h1>

<p>
    <a class="btn btn-secondary"  asp-action="Index">View Incomplete Items</a>
</p>
<div class="row row-cols-md-4 g-2 ">
    @foreach (var item in Model)
    {
        <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.TaskName)</h5>
                <p class="mb-0">Created: @Html.DisplayFor(modelItem => item.Created)</p>
                <p class="mb-0">Complete</p>
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
        </div>
    }
</div>